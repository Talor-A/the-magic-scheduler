{
  "name": "the-magic-scheduler",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz build && blitz dev",
    "build": "yarn migrate:deploy && blitz build",
    "start": "blitz start --port ${PORT-3000}",
    "migrate:create": "blitz prisma migrate dev --create-only",
    "migrate:dev": "blitz prisma migrate dev --preview-feature",
    "migrate:deploy": "blitz prisma migrate deploy --preview-feature",
    "start:production": "blitz start --production --port $PORT",
    "studio": "blitz prisma studio",
    "prisma": "blitz prisma",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "2.28.0",
    "blitz": "0.38.6",
    "formik": "2.2.9",
    "react": "alpha",
    "react-dom": "alpha",
    "tiny-invariant": "1.1.0",
    "zod": "3.5.1"
  },
  "devDependencies": {
    "@types/preview-email": "2.0.1",
    "@types/react": "17.0.15",
    "eslint": "7.31.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.3.2",
    "prettier-plugin-prisma": "0.15.0",
    "pretty-quick": "3.1.1",
    "preview-email": "3.0.4",
    "prisma": "2.28.0",
    "typescript": "~4.3"
  },
  "private": true
}
